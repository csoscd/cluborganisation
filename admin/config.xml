<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="component"
        label="JGLOBAL_FIELDSET_COMPONENT_SETTINGS"
        description="COM_CLUBORGANISATION_CONFIG_COMPONENT_DESC"
    >
        <field
            name="encryption_key"
            type="password"
            label="COM_CLUBORGANISATION_CONFIG_ENCRYPTION_KEY_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_ENCRYPTION_KEY_DESC"
            autocomplete="off"
        />
        
        <field
            name="dsgvo_years_threshold"
            type="number"
            label="COM_CLUBORGANISATION_CONFIG_DSGVO_YEARS_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_DSGVO_YEARS_DESC"
            default="3"
            min="1"
            max="20"
            step="1"
        />
    </fieldset>

    <fieldset
        name="member_numbers"
        label="COM_CLUBORGANISATION_CONFIG_MEMBER_NUMBERS_LABEL"
        description="COM_CLUBORGANISATION_CONFIG_MEMBER_NUMBERS_DESC"
    >
        <field
            name="auto_generate_member_no"
            type="radio"
            label="COM_CLUBORGANISATION_CONFIG_AUTO_GENERATE_MEMBER_NO_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_AUTO_GENERATE_MEMBER_NO_DESC"
            class="btn-group btn-group-yesno"
            default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="member_no_pattern"
            type="text"
            label="COM_CLUBORGANISATION_CONFIG_MEMBER_NO_PATTERN_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_MEMBER_NO_PATTERN_DESC"
            default="[No]"
            size="30"
            hint="AM0806-02/[No]"
            showon="auto_generate_member_no:1"
        />
    </fieldset>

    <fieldset
        name="joomla_user"
        label="COM_CLUBORGANISATION_CONFIG_JOOMLA_USER_LABEL"
        description="COM_CLUBORGANISATION_CONFIG_JOOMLA_USER_DESC"
    >
        <field
            name="user_email_from"
            type="text"
            label="COM_CLUBORGANISATION_CONFIG_USER_EMAIL_FROM_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_USER_EMAIL_FROM_DESC"
            default=""
            size="50"
            filter="string"
            validate="email"
        />

        <field
            name="user_email_text"
            type="editor"
            label="COM_CLUBORGANISATION_CONFIG_USER_EMAIL_TEXT_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_USER_EMAIL_TEXT_DESC"
            default="&lt;p&gt;Hallo [FIRSTNAME] [LASTNAME],&lt;/p&gt;&lt;p&gt;für Sie wurde ein Benutzerkonto auf unserer Website erstellt.&lt;/p&gt;&lt;p&gt;&lt;strong&gt;Ihre Zugangsdaten:&lt;/strong&gt;&lt;br&gt;Benutzername: &lt;strong&gt;[USERNAME]&lt;/strong&gt;&lt;br&gt;Passwort: &lt;strong&gt;[PASSWORD]&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;Bitte ändern Sie Ihr Passwort nach der ersten Anmeldung.&lt;/p&gt;&lt;p&gt;Mit freundlichen Grüßen&lt;/p&gt;"
            filter="safehtml"
            buttons="true"
            hide="pagebreak,readmore"
        />

        <field
            name="user_require_reset"
            type="radio"
            label="COM_CLUBORGANISATION_CONFIG_USER_REQUIRE_RESET_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_USER_REQUIRE_RESET_DESC"
            class="btn-group btn-group-yesno"
            default="1"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="user_block"
            type="radio"
            label="COM_CLUBORGANISATION_CONFIG_USER_BLOCK_LABEL"
            description="COM_CLUBORGANISATION_CONFIG_USER_BLOCK_DESC"
            class="btn-group"
            default="0"
        >
            <option value="0">COM_CLUBORGANISATION_USER_STATUS_ENABLED</option>
            <option value="1">COM_CLUBORGANISATION_USER_STATUS_BLOCKED</option>
        </field>
    </fieldset>

    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox"
            filter="rules"
            component="com_cluborganisation"
            section="component"
        />
    </fieldset>
</config>
