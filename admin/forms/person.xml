<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
        />

        <field
            name="salutation"
            type="sql"
            label="COM_CLUBORGANISATION_FIELD_SALUTATION"
            description=""
            query="SELECT id, title FROM #__cluborganisation_salutations WHERE published = 1 ORDER BY ordering"
            key_field="id"
            value_field="title"
            required="true"
            validate="options"
        >
            <option value="">COM_CLUBORGANISATION_SELECT_SALUTATION</option>
        </field>

        <field
            name="firstname"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_FIRSTNAME"
            description=""
            class="inputbox"
            size="40"
            required="true"
        />

        <field
            name="middlename"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_MIDDLENAME"
            description=""
            class="inputbox"
            size="40"
        />

        <field
            name="lastname"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_LASTNAME"
            description=""
            class="inputbox"
            size="40"
            required="true"
        />

        <field
            name="birthname"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_BIRTHNAME"
            description=""
            class="inputbox"
            size="40"
        />

        <field
            name="address"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_ADDRESS"
            description=""
            class="inputbox"
            size="60"
            required="true"
        />

        <field
            name="zip"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_ZIP"
            description=""
            class="inputbox"
            size="10"
            required="true"
        />

        <field
            name="city"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_CITY"
            description=""
            class="inputbox"
            size="40"
            required="true"
        />

        <field
            name="country"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_COUNTRY"
            description=""
            class="inputbox"
            size="40"
            required="true"
            default="Deutschland"
        />

        <field
            name="telephone"
            type="tel"
            label="COM_CLUBORGANISATION_FIELD_TELEPHONE"
            description=""
            class="inputbox"
            size="20"
        />

        <field
            name="mobile"
            type="tel"
            label="COM_CLUBORGANISATION_FIELD_MOBILE"
            description=""
            class="inputbox"
            size="20"
            required="true"
        />

        <field
            name="email"
            type="email"
            label="COM_CLUBORGANISATION_FIELD_EMAIL"
            description=""
            class="inputbox validate-email"
            size="40"
            required="true"
            validate="email"
        />

        <field
            name="birthday"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_BIRTHDAY"
            description=""
            class="inputbox"
            required="true"
            format="%Y-%m-%d"
        />

        <field
            name="deceased"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_DECEASED"
            description=""
            class="inputbox"
            format="%Y-%m-%d"
        />

        <field
            name="member_no"
            type="text"
            label="COM_CLUBORGANISATION_FIELD_MEMBER_NO"
            description=""
            class="inputbox"
            size="20"
            required="true"
        />

        <field
            name="active"
            type="radio"
            label="COM_CLUBORGANISATION_FIELD_ACTIVE"
            description=""
            class="btn-group"
            default="1"
            required="true"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="image"
            type="media"
            label="COM_CLUBORGANISATION_FIELD_IMAGE"
            description=""
            directory="cluborganisation/persons"
        />

        <field
            name="user_id"
            type="user"
            label="COM_CLUBORGANISATION_FIELD_USER_ID"
            description=""
        />
    </fieldset>

    <fieldset name="publishing">
        <field
            name="created"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_CREATED"
            description=""
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            readonly="true"
            disabled="true"
        />

        <field
            name="created_by"
            type="user"
            label="COM_CLUBORGANISATION_FIELD_CREATED_BY"
            description=""
            readonly="true"
            disabled="true"
        />

        <field
            name="modified"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_MODIFIED"
            description=""
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            readonly="true"
            disabled="true"
        />

        <field
            name="modified_by"
            type="user"
            label="COM_CLUBORGANISATION_FIELD_MODIFIED_BY"
            description=""
            readonly="true"
            disabled="true"
        />
    </fieldset>
</form>
