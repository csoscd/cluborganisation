<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_CLUBORGANISATION_FILTER_SEARCH"
            description="COM_CLUBORGANISATION_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="active"
            type="list"
            label="COM_CLUBORGANISATION_FIELD_ACTIVE"
            onchange="this.form.submit();"
        >
            <option value="">COM_CLUBORGANISATION_SELECT_ACTIVE</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="salutation"
            type="sql"
            label="COM_CLUBORGANISATION_FIELD_SALUTATION"
            query="SELECT id, title FROM #__cluborganisation_salutations WHERE published = 1 ORDER BY ordering"
            key_field="id"
            value_field="title"
            onchange="this.form.submit();"
        >
            <option value="">COM_CLUBORGANISATION_SELECT_SALUTATION</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            default="a.lastname ASC"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.lastname ASC">COM_CLUBORGANISATION_FIELD_LASTNAME_ASC</option>
            <option value="a.lastname DESC">COM_CLUBORGANISATION_FIELD_LASTNAME_DESC</option>
            <option value="a.firstname ASC">COM_CLUBORGANISATION_FIELD_FIRSTNAME_ASC</option>
            <option value="a.firstname DESC">COM_CLUBORGANISATION_FIELD_FIRSTNAME_DESC</option>
            <option value="a.member_no ASC">COM_CLUBORGANISATION_FIELD_MEMBER_NO_ASC</option>
            <option value="a.member_no DESC">COM_CLUBORGANISATION_FIELD_MEMBER_NO_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="JGLOBAL_LIST_LIMIT"
            description="COM_CLUBORGANISATION_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
