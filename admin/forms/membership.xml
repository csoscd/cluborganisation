<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="hidden"
        />

        <field
            name="person_id"
            type="sql"
            label="COM_CLUBORGANISATION_FIELD_PERSON"
            description=""
            required="true"
            query="SELECT id, CONCAT(lastname, ', ', firstname, ' (', member_no, ')') AS name FROM #__cluborganisation_persons WHERE active = 1 ORDER BY lastname, firstname"
            key_field="id"
            value_field="name"
        >
            <option value="">COM_CLUBORGANISATION_SELECT_PERSON</option>
        </field>

        <field
            name="type"
            type="sql"
            label="COM_CLUBORGANISATION_FIELD_TYPE"
            description=""
            required="true"
            query="SELECT id, title FROM #__cluborganisation_membershiptypes WHERE published = 1 ORDER BY ordering"
            key_field="id"
            value_field="title"
        >
            <option value="">COM_CLUBORGANISATION_SELECT_TYPE</option>
        </field>

        <field
            name="begin"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_BEGIN"
            description=""
            class="inputbox"
            required="true"
            format="%Y-%m-%d"
        />

        <field
            name="end"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_END"
            description="COM_CLUBORGANISATION_FIELD_END_DESC"
            class="inputbox"
            format="%Y-%m-%d"
        />

        <field
            name="catid"
            type="category"
            label="COM_CLUBORGANISATION_FIELD_CATEGORY"
            description="COM_CLUBORGANISATION_FIELD_CATEGORY_DESC"
            class="inputbox"
            extension="com_cluborganisation"
            default="0"
        >
            <option value="0">JOPTION_SELECT_CATEGORY</option>
        </field>
    </fieldset>

    <fieldset name="publishing">
        <field
            name="created"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_CREATED"
            description=""
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            readonly="true"
            disabled="true"
        />

        <field
            name="created_by"
            type="user"
            label="COM_CLUBORGANISATION_FIELD_CREATED_BY"
            description=""
            readonly="true"
            disabled="true"
        />

        <field
            name="modified"
            type="calendar"
            label="COM_CLUBORGANISATION_FIELD_MODIFIED"
            description=""
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            readonly="true"
            disabled="true"
        />

        <field
            name="modified_by"
            type="user"
            label="COM_CLUBORGANISATION_FIELD_MODIFIED_BY"
            description=""
            readonly="true"
            disabled="true"
        />
    </fieldset>
</form>
