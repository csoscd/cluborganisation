<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_CLUBORGANISATION_FILTER_SEARCH"
            description="COM_CLUBORGANISATION_FILTER_MEMBERSHIPS_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="active_only"
            type="list"
            label="COM_CLUBORGANISATION_FILTER_ACTIVE_MEMBERSHIPS"
            onchange="this.form.submit();"
        >
            <option value="">COM_CLUBORGANISATION_FILTER_ALL</option>
            <option value="1">COM_CLUBORGANISATION_FILTER_ACTIVE_ONLY</option>
            <option value="0">COM_CLUBORGANISATION_FILTER_INACTIVE_ONLY</option>
        </field>

        <field
            name="type"
            type="sql"
            label="COM_CLUBORGANISATION_FIELD_TYPE"
            query="SELECT id, title FROM #__cluborganisation_membershiptypes WHERE published = 1 ORDER BY ordering"
            key_field="id"
            value_field="title"
            onchange="this.form.submit();"
        >
            <option value="">COM_CLUBORGANISATION_FILTER_ALL_TYPES</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            default="a.begin DESC"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="p.lastname ASC">COM_CLUBORGANISATION_FIELD_LASTNAME_ASC</option>
            <option value="p.lastname DESC">COM_CLUBORGANISATION_FIELD_LASTNAME_DESC</option>
            <option value="a.begin ASC">COM_CLUBORGANISATION_FIELD_BEGIN_ASC</option>
            <option value="a.begin DESC">COM_CLUBORGANISATION_FIELD_BEGIN_DESC</option>
            <option value="a.end ASC">COM_CLUBORGANISATION_FIELD_END_ASC</option>
            <option value="a.end DESC">COM_CLUBORGANISATION_FIELD_END_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="JGLOBAL_LIST_LIMIT"
            description="COM_CLUBORGANISATION_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>
