                <option value="1">JSHOW</option>
            </field>

            <field
                name="page_heading"
                type="text"
                label="JGLOBAL_PAGE_HEADING_LABEL"
                showon="show_page_heading:1"
            />

            <field
                name="movement_type"
                type="list"
                label="COM_CLUBORGANISATION_FIELD_MOVEMENT_TYPE"
                description="COM_CLUBORGANISATION_FIELD_MOVEMENT_TYPE_DESC"
                default="entries"
                >
                <option value="entries">COM_CLUBORGANISATION_MOVEMENT_TYPE_ENTRIES</option>
                <option value="exits">COM_CLUBORGANISATION_MOVEMENT_TYPE_EXITS</option>
            </field>

            <field
                name="movement_year"
                type="yearrange"
                label="COM_CLUBORGANISATION_FIELD_MOVEMENT_YEAR"
                description="COM_CLUBORGANISATION_FIELD_MOVEMENT_YEAR_DESC"
                default=""
                addfieldprefix="CSOSCD\Component\ClubOrganisation\Site\Field"
                />
